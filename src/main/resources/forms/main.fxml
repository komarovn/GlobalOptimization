<?import javafx.scene.Cursor?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<VBox stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.optimization.application.Controller">
    <children>
      <HBox maxHeight="52.0" minHeight="52.0">
          <padding>
              <Insets left="16" right="16" top="12" />
          </padding>
         <children>
            <Pane HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" maxHeight="40.0" minHeight="40.0">
                     <children>
                        <Label prefHeight="20.0" prefWidth="68.0" text="Function:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="functionField" minWidth="300.0" prefHeight="32.0" styleClass="text-field" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
               </children>
            </Pane>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Interval:">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </Label>
                  <TextField fx:id="leftBoundIntervalField" prefHeight="32.0" prefWidth="72.0" styleClass="text-field">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Label text=",">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </Label>
                  <TextField fx:id="rightBoundIntervalField" prefHeight="32.0" prefWidth="72.0" styleClass="text-field">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox maxHeight="40.0" minHeight="40.0">
          <padding>
              <Insets left="16" right="16" />
          </padding>
         <children>
             <HBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
                 <children>
                     <Label minWidth="68.0" maxWidth="68.0" text="Method:">
                         <font>
                             <Font size="14.0" />
                         </font>
                     </Label>
                     <ComboBox fx:id="methodSelector" layoutX="77.0" layoutY="4.0" prefHeight="32.0" minWidth="166.0" HBox.hgrow="ALWAYS" styleClass="combo" />
                 </children>
             </HBox>
             <HBox alignment="CENTER_LEFT" HBox.hgrow="SOMETIMES">
                 <padding>
                     <Insets left="16"/>
                 </padding>
               <children>
                  <Label layoutY="10.0" text="Stop by" minWidth="60">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="precisionRadio" mnemonicParsing="false" selected="true" styleClass="radio-button" text="Precision Îµ">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="stopByGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="iterationsCountRadio" mnemonicParsing="false" styleClass="radio-button" text="Iterations Count" toggleGroup="$stopByGroup">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </RadioButton>
                  <Label text="with Value:" minWidth="80">
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="stopByValueField" prefHeight="32.0" prefWidth="72.0" styleClass="text-field">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
             </HBox>
            <Pane prefWidth="103.0">
               <children>
                  <Label fx:id="rLabel" layoutX="14.0" layoutY="10.0" text="r:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="rValueField" layoutX="30.0" layoutY="4.0" prefHeight="32.0" prefWidth="72.0" styleClass="text-field">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </Pane>
         </children>
      </HBox>
      <LineChart fx:id="plotArea" legendVisible="false">
        <xAxis>
          <NumberAxis prefWidth="493.0" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
         <cursor>
            <Cursor fx:constant="CROSSHAIR" />
         </cursor>
      </LineChart>
      <HBox maxHeight="52.0" minHeight="52.0" alignment="CENTER_LEFT">
          <padding>
              <Insets left="16" right="16" bottom="12" />
          </padding>
         <children>
             <Button fx:id="processButton" mnemonicParsing="false" prefHeight="32.0" minWidth="72.0" maxWidth="72.0" styleClass="button" text="Process" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Iterations Count:">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </Label>
                  <Label fx:id="iterationsCountValue" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="16"/>
                      </padding>
                  </Label>
                  <Label text="Argument Value:">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </Label>
                  <Label fx:id="argumentValue" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="16"/>
                      </padding>
                  </Label>
                  <Label text="Function Value:">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="8"/>
                      </padding>
                  </Label>
                  <Label fx:id="functionValue" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                      <padding>
                          <Insets left="8" right="16"/>
                      </padding>
                  </Label>
               </children>
            </HBox>
         </children>
      </HBox>
    </children>
</VBox>
